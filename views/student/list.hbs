<h3><a class="btn btn-secondary" href="/student">Create New Entry</a></h3>
<table class ="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Highest Qualification</th>
            <th>Position applied for</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.highestQ}}</td>
            <td>{{this.posApplied}}</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/student/{{this.id}}">Edit</a>
                <a class="btn btn-primary btn-sm" href="/student/delete/{{this.id}}" onclick="return confirm("Are your sure")">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>